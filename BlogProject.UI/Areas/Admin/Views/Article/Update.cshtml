
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model BlogProject.UI.Areas.Admin.Models.VM.ArticleListVM


<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Article/List">Forms</a></li>
        <li class="active">Update Article</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update User</h3>
                </div>
                <form action="/Admin/Article/Update" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Header</label>
                            <input type="text" name="Header" value="@Model.Article.Header" class="form-control" placeholder="Header">
                        </div>
                        <div class="form-group">
                            <label for="text">Content</label>
                            <input type="text" name="Content" value="@Model.Article.Content" class="form-control" placeholder="Content">
                        </div>
                        <div class="form-group">

                            <label for="text">PublishDate</label>
                            <input type="text" name="PublishDate" value="@Model.Article.PublishDate" class="form-control" placeholder="PublishDate">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="AppUserID">Choose Users</label>
                            <select name="AppUserID" class="form-control">
                                @foreach (var item in Model.AppUsers)
                                {
                                    <option value="@item.ID">@item.FirstName @item.LastName</option>
                                }
                            </select>
                        </div>
                    </div>
                    

                    <input type="text" style="visibility:hidden" name="ID" value="@Model.Article.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

