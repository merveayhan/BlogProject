
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Member/Views/Shared/MemberLayoutPage.cshtml";
}

@model List<BlogProject.DAL.ORM.Entity.Article>


<link href="~/Content/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/scripts/jquery.dataTables.min.js"></script>
<script src="~/Content/scripts/dataTables.bootstrap.min.js"></script>
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Member/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Member/Article/Add">Add Article</a></li>
        <li><a href="/Member/Article/List">List of Article</a></li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Article of Categories</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Header</th>
                                <th>Content</th>
                                <th>Category Name</th>
                                <th>Author Name</th>
                                <th>Publish Date</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Header</td>
                                    <td>@item.Content</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.AppUser.FirstName @item.AppUser.LastName</td>
                                    <td>@item.PublishDate</td>

                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>




